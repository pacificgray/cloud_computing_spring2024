from flask import Flask, render_template, request, redirect
app = Flask(__name__)

# In-memory data storage (replace with a database in a real application)
user_data = {}

@app.route('/')
def registration_page():
    return render_template('registration.html')

@app.route('/submit_registration', methods=['POST'])
def submit_registration():
    username = request.form.get('username')
    password = request.form.get('password')
    first_name = request.form.get('first_name')
    last_name = request.form.get('last_name')
    email = request.form.get('email')

    # Store user data in the dictionary
    user_data[username] = {
        'password': password,
        'first_name': first_name,
        'last_name': last_name,
        'email': email
    }

    # Redirect to the next page
    return redirect('/display_information')

@app.route('/display_information')
def display_information():
    return render_template('display_information.html', user_data=user_data)

@app.route('/retrieve_user_information', methods=['POST'])
def retrieve_user_information():
    username = request.form.get('username_login')
    password = request.form.get('password_login')

    # Check if username and password match stored data
    if username in user_data and user_data[username]['password'] == password:
        return render_template('user_information.html', user_info=user_data[username])
    else:
        return "Invalid username or password"

if __name__ == '__main__':
    app.run(debug=True)

